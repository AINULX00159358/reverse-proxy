apiVersion: v1
kind: Pod
metadata:
  name: nginx-reverse-proxy
  labels:
    app: nginx-reverse-proxy
spec:
  containers:
  - name: nginx
    image: nginx:latest
    ports:
    - containerPort: 80
    volumeMounts:
    - mountPath: /etc/nginx
      readOnly: true
      name: nginx-conf
    - mountPath: /var/log/nginx
      name: log
  volumes:
  - name: nginx-conf
    configMap:
      name: nginx-conf
      items:
        - key: nginx.conf
          path: nginx.conf
  - name: log
    emptyDir: {}
